{
	"name" : "Language Immersion",
	"version" : "1.0",
	"manifest_version" : 2,
	"description" : "Replaces portions of text with a langauge you're trying to learn",
	"icons" : {"128" : "images/browseraction.png"},
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"browser_action" : {
		"default_icon" : "images/browseraction.png",
		"default_title" : "Language Immersion",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
            ],
            "js": [
            	"js/jquery-3.1.0.min.js",
            	"js/jquery.ba-replacetext.js",
				"js/content.js"
			]
		}
	],
	"options_page" : "options.html",
	"permissions" : [
		"tabs",
		"storage",
		"http://*/*",
		"https://*/*"
	],
	"content_security_policy": "script-src 'self' https://languageimmersion.tk:8888; object-src 'self'"
}