{
	"name" : "Language Immersion",
	"version" : "1.0",
	"manifest_version" : 2,
	"description" : "Replaces portions of text with a langauge you're trying to learn",
	"icons" : {},
	"background" : {
		"scripts" : ["background.js"]
	},
	"browser_action" : {
		"default_title" : "Language Immersion"
	},
	"options_page" : "options.html",
	"permissions" : [
		"background",
		"tabs",
		"http://*/*",
		"https://*/*"
	]
}